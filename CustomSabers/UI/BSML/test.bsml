<vertical preferred-width='80' anchor-pos-x='23' child-control-height='false' xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xsi:schemaLocation='https://monkeymanboy.github.io/BSML-Docs/ https://raw.githubusercontent.com/monkeymanboy/BSML-Docs/gh-pages/BSMLSchema.xsd'>

  <vertical spacing='2' horizontal-fit='Unconstrained'>

    <vertical child-control-height='true' preferred-width='54' min-height='7' child-expand-height='true'>
      <horizontal horizontal-fit='PreferredSize' background='panel-top' preferred-width='25' preferred-height='7'>
        <text text='Settings' align='Capline' font-size='6' id='settings-title'/>
      </horizontal>
    </vertical>

    <vertical horizontal-fit='Unconstrained' child-control-height='false' child-expand-height='false' background='round-rect-panel' bg-color='#00000077' pad='2' bg='round-rect-panel'>

      <!--Toggle white trail gradient-->
      <checkbox-setting text='Disable White Trail' value='disable-white-trail' apply-on-change='true' bind-value='true' hover-hint='Toggles the initial white part of trails' />

      <!--Toggle trail duration overriding-->
      <checkbox-setting text='Override Trail Length' value='override-trail-duration' apply-on-change='true' bind-value='true' hover-hint='Allows you to set the length of trails' />

      <!--Trail duration as a multiplier to SaberTail _trailDuration from 0% to 100%-->
      <slider-setting text='Trail Length' value='trail-duration' id='trail-duration' interactable='true' min='0' max='100' increment='1' integer-only='true' show-buttons='true' apply-on-change='true' bind-value='true' hover-hint='Tune the duration/length of sabers&apos; trails' />

      <!--Trail type (custom, vanilla, none)-->
      <list-setting text='Saber Trail Type' value='trail-type' options='trail-type-list' apply-on-change='true' bind-value='true' hover-hint='Select the type of trail you want to use' />
    </vertical>

    <vertical horizontal-fit='Unconstrained' child-control-height='false' child-expand-height='false' background='round-rect-panel' bg-color='#00000077' pad='2' bg='round-rect-panel'>
      <!--Toggle saber custom events-->
      <checkbox-setting text='Enable Saber Events' value='enable-custom-events' apply-on-change='true' bind-value='true' hover-hint='Toggles saber events. For instance, an effect happening when you achieve a full combo' />


      <!--Custom color scheme-->
      <horizontal horizontal-fit='Unconstrained'>
        <!--Toggle custom color scheme-->
        <horizontal horizontal-fit='Unconstrained' preferred-width='46'>
          <checkbox-setting text='Saber Color Scheme' value='enable-custom-color-scheme' apply-on-change='true' hover-hint='Change your saber colors seperately from the color of the notes'/>
        </horizontal>

        <horizontal horizontal-fit='PreferredSize' preferred-width='14'>
          <color-setting text='' apply-on-change='true' value='left-saber-color' word-wrapping='false'/>
        </horizontal>
        <horizontal horizontal-fit='PreferredSize' preferred-width='14'>
          <color-setting text='' apply-on-change='true' value='right-saber-color' word-wrapping='false'/>
        </horizontal>
      </horizontal>

      <checkbox-setting text='Feeling Foolish&#63;' value='forcefully-foolish' id='forcefully-foolish' apply-on-change='true' hover-hint='Lets you opt-in to date-specific features' active='false' />
    </vertical>
  </vertical>
</vertical>